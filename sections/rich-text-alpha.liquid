<div class="container-1170" style="margin-bottom:40px;">
  {% if section.settings.heading != blank %}
    <h2 style="text-align: {{ section.settings.text_alignment }}; color: {{ section.settings.text_color }};">
      {{ section.settings.heading }}
    </h2>
  {% endif %}
  <div style="text-align: {{ section.settings.text_alignment }}; color: {{ section.settings.text_color }};">
    {{ section.settings.text }}
  </div>
</div>


{% schema %}
{
  "name": "Rich Text Alpha",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Custom Heading Here"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Rich Text Alpha",
      "category": "Text"
    }
  ]
}
{% endschema %}



